.form-field

  display block

  label

    position relative
    top 7px
    left 8px
    display inline-block
    background white
    z-index 1
    text-transform uppercase
    font-size 12px
    padding-right 10px
    padding-left 5px

  input
  select
  textarea

    display block
    width 100%
    padding-top 13px
    padding-bottom 8px

  &.checkbox-field

    label

      top 0
      left 0

    input

      display inline-block
      width auto
      padding 0
