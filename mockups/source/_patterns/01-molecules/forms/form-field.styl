.form-field

  display block

  label

    position relative
    top 20px
    left 6px
    display inline-block
    background white
    z-index 1
    text-transform uppercase
    font-size 12px
    padding-right 10px
    padding-left 5px
    border-radius 4px

  input
  select
  textarea

    display block
    width 100%
    padding-top 25px
    padding-bottom 6px

  input

    border-bottom 1px solid $color-brand-secondary

  &.checkbox-field

    label

      top 0
      left 0

    input

      display inline-block
      width auto
      padding 0
